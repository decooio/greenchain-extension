{
  "version": "1.0.0",
  "applications": {
    "gecko": {
      "id": "info@greenchain.cc",
      "strict_min_version": "48.0"
    }
  },
  "background": {
    "page": "background.html"
  },
  "name": "GreenChain Wallet",
  "manifest_version": 2,
  "description": "GreenChain Wallet is a wallet for polkadot",
  "browser_action": {
    "default_icon": "img/icon-32-dev.png",
    "default_title": "GreenChain Wallet",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon-16-dev.png",
    "32": "img/icon-32-dev.png",
    "128": "img/icon-128-dev.png"
  },
  "web_accessible_resources": ["inject.html", "in-page-script.js"],
  "permissions": [
    "notifications",
    "storage",
    "tabs",
    "management",
    "activeTab",
    "https://*/*",
    "http://*/*",
    "wss://*/*",
    "ws://*/*"
  ],
  "content_security_policy": "script-src 'self' blob: 'unsafe-eval' 'wasm-eval'; img-src * data:; object-src 'self';"
}
